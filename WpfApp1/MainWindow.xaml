<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
        xmlns:ss="clr-namespace:WpfCustomControlLibrary1;assembly=WpfCustomControlLibrary1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Click"/>
            <TextBox/>
            <Label Content="test"/>
            <ss:NumericBox  Minimum="-100" Maximum="25.00" DecimalPlaces="2" input:InputMethod.IsInputMethodEnabled="False"/>
            <ss:NumTextBox NumType="Decimal" MaxValue="100" MinValue="-100"/>
            <ss:NumericTextBox MinValue="1" MaxValue="15" IsDecimalAllowed="True" MaxLength="20" Scale="2" IsEnabled="True" input:InputMethod.IsInputMethodEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
